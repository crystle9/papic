= simple_form_for @user_session, :html => {:class => 'form-horizontal' } do |f|
  = f.input :login
  = f.input :password
  .form-actions
    = f.button :submit, t('.signin'), :class => 'btn-primary'
    = submit_tag t('cancel'), :type => :reset, :class => "btn btn-danger"
    \|
    = link_to t('.register'), register_url
