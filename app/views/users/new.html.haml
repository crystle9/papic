= simple_form_for @user, :html => {:class => 'form-horizontal'} do |f|
  = f.input :login
  = f.input :password
  = f.input :password_confirmation
  = f.input :role, :as => :radio_buttons, :item_wrapper_class => 'inline',
    :collection => UsersController::ROLES.collect{|c| [User.human_attribute_name(c), c]}
  = f.input :agreement, :as => :boolean
  = f.button :submit